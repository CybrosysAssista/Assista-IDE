{
  "name": "odoo-source-control",
  "displayName": "Odoo Source Control",
  "description": "Complete Odoo development environment with source control, configuration, and welcome screen",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "odoo-source-control.pullSource",
        "title": "Pull Odoo Source Code",
        "icon": "$(repo-clone)",
        "category": "Odoo"
      },
      {
        "command": "odoo-source-control.createConfig",
        "title": "Create Odoo Config File",
        "icon": "$(settings-gear)",
        "category": "Odoo"
      },
      {
        "command": "odoo-source-control.configDebugger",
        "title": "Config Odoo Debugger",
        "icon": "$(debug-alt)",
        "category": "Odoo"
      },
      {
        "command": "odoo-source-control.showWelcome",
        "title": "Show Odoo Welcome Screen",
        "icon": "$(home)",
        "category": "Odoo"
      },
      {
        "command": "odoo-source-control.showConfigure",
        "title": "Configure Odoo Workspace",
        "icon": "$(gear)",
        "category": "Odoo"
      }
    ],
    "configuration": {
      "title": "Odoo Source Control",
      "properties": {
        "odoo-source-control.needsConfiguration": {
          "type": "boolean",
          "default": false,
          "description": "Internal flag to trigger configuration screen"
        }
      }
    },
    "menus": {
      "menubar/help": [
        {
          "command": "odoo-source-control.showWelcome",
          "group": "navigation@1"
        },
        {
          "command": "odoo-source-control.pullSource",
          "group": "navigation@2"
        },
        {
          "command": "odoo-source-control.createConfig",
          "group": "navigation@3"
        },
        {
          "command": "odoo-source-control.configDebugger",
          "group": "navigation@4"
        }
      ],
      "editor/title": [
        {
          "command": "odoo-source-control.showWelcome",
          "group": "navigation",
          "when": "editorIsOpen"
        },
        {
          "command": "odoo-source-control.pullSource",
          "group": "navigation",
          "when": "editorIsOpen"
        },
        {
          "command": "odoo-source-control.createConfig",
          "group": "navigation",
          "when": "editorIsOpen"
        },
        {
          "command": "odoo-source-control.configDebugger",
          "group": "navigation",
          "when": "editorIsOpen"
        }
      ],
      "commandPalette": [
        {
          "command": "odoo-source-control.showWelcome"
        },
        {
          "command": "odoo-source-control.pullSource"
        },
        {
          "command": "odoo-source-control.createConfig"
        },
        {
          "command": "odoo-source-control.configDebugger"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.26.0",
    "typescript": "^5.2.2"
  }
}
